# Hadoop Core Configuration
CORE_CONF_fs_defaultFS=hdfs://namenode:8020

# HDFS Configuration
HDFS_CONF_dfs_replication=1
HDFS_CONF_dfs_namenode_name_dir=file:///opt/hadoop/dfs/name
HDFS_CONF_dfs_datanode_data_dir=file:///opt/hadoop/dfs/data
HDFS_CONF_dfs_permissions_enabled=false
HDFS_CONF_dfs_webhdfs_enabled=true

# MapReduce/Yarn (Simplified to avoid the unpack error)
YARN_CONF_yarn_resourcemanager_hostname=resourcemanager
YARN_CONF_yarn_nodemanager_aux_services=mapreduce_shuffle